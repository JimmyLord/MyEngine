{
	"name": "myenginelua",
	"displayName": "MyEngineLua",
	"description": "Lua bindings for MyEngine and early in-progress debugger.",
	"version": "0.0.2",
	"publisher": "JimmyLord",
	"engines": {
		"vscode": "^1.18.0",
		"node": "^7.9.0"
	},
	"categories": [
		"Debuggers",
		"Snippets"
	],
	"dependencies": {
		"vscode-debugprotocol": "^1.24.0",
		"vscode-debugadapter": "^1.24.0"
	},
	"devDependencies": {
		"@types/node": "^6.0.50",
		"@types/mocha": "^2.2.44",
		"typescript": "^2.5.3",
		"mocha": "^3.5.0",
		"vscode": "^1.1.6",
		"vscode-debugadapter-testsupport": "^1.24.0",
		"tslint": "^5.8.0",
		"vsce": "^1.31.2"
	},
	"scripts": {
		"prepublish": "tsc -p ./source",
		"compile": "tsc -p ./source",
		"tslint": "tslint ./source/**/*.ts",
		"watch": "tsc -w -p ./source",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"snippets": [
			{
				"language": "lua",
				"path": "./snippets/snippets.json"
			}
		],
		"breakpoints": [
			{
				"language": "lua"
			}
		],
		"debuggers": [
			{
				"type": "myenginelua",
				"label": "MyEngine Lua Debug",
				"program": "./out/MyEngineLuaDebug.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
						],
						"properties": {
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "myenginelua",
						"request": "launch",
						"name": "MyEngine Lua",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "MyEngine Lua Debugger: Launch",
						"description": "A new configuration for launching the MyEngine Lua debugger",
						"body": {
							"type": "myenginelua",
							"request": "launch",
							"name": "${2:Launch Program}"
						}
					}
				],
				"variables": {
				}
			}
		]
	}
}
