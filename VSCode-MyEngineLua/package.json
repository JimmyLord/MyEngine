{
	"name": "myenginelua",
	"displayName": "MyEngineLua",
	"description": "Lua debugger and snippets for MyEngine.",
	"version": "0.0.2",
	"publisher": "JimmyLord",
	"author": {
		"name": "Jimmy Lord",
		"email": "jimmylord@gmail.com"
	},
	"license": "Zlib",
	"repository": {
		"type": "git",
		"url": "https://github.com/jimmylord/MyEngine.git"
	},
	"engines": {
		"vscode": "^1.18.0",
		"node": "^7.9.0"
	},
	"categories": [
		"Debuggers",
		"Snippets"
	],
	"dependencies": {
		"vscode-debugprotocol": "^1.27.0",
		"vscode-debugadapter": "^1.27.0"
	},
	"devDependencies": {
		"@types/node": "7.0.55",
		"@types/mocha": "2.2.48",
		"typescript": "2.6.2",
		"mocha": "5.0.1",
		"vscode": "1.1.17",
		"vscode-debugadapter-testsupport": "1.27.0",
		"tslint": "5.9.1",
		"vsce": "1.37.5"
	},
	"scripts": {
		"prepare": "tsc -p ./source",
		"compile": "tsc -p ./source",
		"tslint": "tslint ./source/**/*.ts",
		"watch": "tsc -w -p ./source",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"snippets": [
			{
				"language": "lua",
				"path": "./snippets/snippets.json"
			}
		],
		"breakpoints": [
			{
				"language": "lua"
			}
		],
		"debuggers": [
			{
				"type": "myenginelua",
				"label": "MyEngine Lua Debug",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [],
						"properties": {
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"showDebugLog": {
								"type": "boolean",
								"description": "Enable logging of network communication (for debugging debugger).",
								"default": false
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "myenginelua",
						"request": "launch",
						"name": "MyEngine Lua",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "MyEngine Lua Debugger: Launch",
						"description": "A new configuration for launching the MyEngine Lua debugger",
						"body": {
							"type": "myenginelua",
							"request": "launch",
							"name": "${2:Launch Program}"
						}
					}
				],
				"variables": {}
			}
		]
	}
}
